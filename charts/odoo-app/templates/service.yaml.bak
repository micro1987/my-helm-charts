apiVersion: v1
kind: Service
metadata:
  name: {{ include "odoo-app.fullname" . }}
  labels:
    {{- include "odoo-app.labels" . | nindent 4 }}
spec:
  type: {{ .Values.service.type }}
  ports:
    - port: {{ .Values.service.port }}
      targetPort: {{ .Values.service.targetPort }}
      nodePort: {{ .Values.service.nodePort }}
      protocol: TCP
      name: odoo-port
  selector:
    {{- include "odoo-app.selectorLabels" . | nindent 4 }}
